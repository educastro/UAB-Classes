package lab02;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.Scanner;

public class InsertionSort {

	public void sortAnArray(int[] arrayOfInputs, int sizeOfTheArrayOfInputs) throws FileNotFoundException{
		
		System.out.println("UNSORTED");
		System.out.println(arrayOfInputs[0]);
		System.out.println(arrayOfInputs[1]);
		System.out.println(arrayOfInputs[2]);
		System.out.println(arrayOfInputs[3]);
		System.out.println(arrayOfInputs[4]);
		System.out.println(arrayOfInputs[5]);
		System.out.println("-----------");
		
		int key = 0;
		int j = 1;
		int i = 0;
		for(j = 1; j < sizeOfTheArrayOfInputs ; j++){
			key = arrayOfInputs[j];
			 for(i = j - 1; ((i >= 0) && (arrayOfInputs[i] > key)); i--)   // Smaller values are moving up
	          {
				 arrayOfInputs[i+1] = arrayOfInputs[i];
	          }
			 arrayOfInputs[i+1] = key;    // Put the key in its proper location
		}
		
		System.out.println("SORTED");
		System.out.println(arrayOfInputs[0]);
		System.out.println(arrayOfInputs[1]);
		System.out.println(arrayOfInputs[2]);
		System.out.println(arrayOfInputs[3]);
		System.out.println(arrayOfInputs[4]);
		System.out.println(arrayOfInputs[5]);
		System.out.println(arrayOfInputs[sizeOfTheArrayOfInputs - 5]);
		System.out.println(arrayOfInputs[sizeOfTheArrayOfInputs - 4]);
		System.out.println(arrayOfInputs[sizeOfTheArrayOfInputs - 3]);
		System.out.println(arrayOfInputs[sizeOfTheArrayOfInputs - 2]);
		System.out.println(arrayOfInputs[sizeOfTheArrayOfInputs - 1]);
		System.out.println("-----------");

	}
	

}