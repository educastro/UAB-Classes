			sizeOfTheArrayOfInputs++;
			inputFile.nextInt();
		}
		arrayOfInputs = new int[sizeOfTheArrayOfInputs];
		inputFile.reset();
		for(int iteratorNumber = 0; iteratorNumber < sizeOfTheArrayOfInputs; iteratorNumber++){
			arrayOfInputs[iteratorNumber] = inputFile.nextInt();
		}
	}
	
